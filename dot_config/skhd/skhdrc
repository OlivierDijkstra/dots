# Moving windows around, similar to magnet app
ctrl - left : yabai -m window --swap west
ctrl - right : yabai -m window --swap east
ctrl - up : yabai -m window --swap north
ctrl - down : yabai -m window --swap south

# Increase window size
ctrl + shift - left  : yabai -m window --resize left:-40:0
ctrl + shift - right : yabai -m window --resize right:40:0
ctrl + shift - up    : yabai -m window --resize top:0:-40
ctrl + shift - down  : yabai -m window --resize bottom:0:40

# Decrease window size
ctrl + alt - left  : yabai -m window --resize left:40:0 
ctrl + alt - right : yabai -m window --resize right:-40:0
ctrl + alt - up    : yabai -m window --resize top:0:40
ctrl + alt - down  : yabai -m window --resize bottom:0:-40
