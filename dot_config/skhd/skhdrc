# Moving windows around, similar to magnet app
ctrl - left : yabai -m window --swap west
ctrl - right : yabai -m window --swap east
ctrl - up : yabai -m window --swap north
ctrl - down : yabai -m window --swap south

# Increase window size
ctrl + shift - left  : yabai -m window --resize left:-100:0
ctrl + shift - right : yabai -m window --resize right:100:0
ctrl + shift - up    : yabai -m window --resize top:0:-100
ctrl + shift - down  : yabai -m window --resize bottom:0:100

# Decrease window size with ctrl + alt
ctrl + cmd - left  : yabai -m window --resize right:-100:0
ctrl + cmd - right : yabai -m window --resize left:100:0
ctrl + cmd - up    : yabai -m window --resize bottom:0:-100
ctrl + cmd - down  : yabai -m window --resize top:0:100
