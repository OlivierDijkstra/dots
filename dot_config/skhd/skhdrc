# Moving windows around, similar to magnet app
ctrl + alt - left : yabai -m window --swap west
ctrl + alt - right : yabai -m window --swap east
ctrl + alt - up : yabai -m window --swap north
ctrl + alt - down : yabai -m window --swap south

# Increase window size
ctrl + shift - left : yabai -m window --resize left:-40:0
ctrl + shift - right : yabai -m window --resize right:40:0
ctrl + shift - up : yabai -m window --resize top:0:-40
ctrl + shift - down : yabai -m window --resize bottom:0:40

# Decrease window size
ctrl + alt + shift - left : yabai -m window --resize right:-40:0
ctrl + alt + shift - right : yabai -m window --resize left:40:0
ctrl + alt + shift - up : yabai -m window --resize top:0:40
ctrl + alt + shift - down : yabai -m window --resize bottom:0:-40

# Equalize window sizes
ctrl + shift - e : yabai -m space --balance
